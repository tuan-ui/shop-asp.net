@model Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login90">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                <form class="login100-form validate-form">
                    <span class="login90-form-title">
                        <strong>Thay đổi mật khẩu</strong>
                    </span>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="wrap-input100 validate-input" >
                        @Html.TextBoxFor(model => model.Email, new { @class = "input100", placeholder = "Email" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" >
                        @Html.PasswordFor(model => model.Password, new { @class = "input100", placeholder = "Mật khẩu" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" >
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input100", placeholder = "Xác nhận mật khẩu" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <input type="submit" value="Xác nhận" class="login100-form-btn">
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/dang-nhap.html">
                            Quay về đăng nhập
                            <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
                }
            </div>
        </div>
    </div>