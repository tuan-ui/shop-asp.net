@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 pt-5">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/UploadedFiles/files/icon.jpg" alt="TuanPC">
            </div>

            <form class="login100-form validate-form">
                <h2 class="login100-form">
                    Xác nhận thay đổi mật khẩu
                </h2>
                <span class="login100-form">
                    Kiểm tra email <strong>@ViewBag.email</strong> của bạn để thay đổi mật khẩu.
                </span>
                <div class="text-center p-t-136">
                    <a class="txt2" href="/">
                        Quay về cửa hàng
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
            
        </div>
       
    </div>
</div>
